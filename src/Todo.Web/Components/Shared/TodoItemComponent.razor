<li class="todo-item @(Item.IsCompleted ? "completed" : "")">
    <input type="checkbox"
           checked="@Item.IsCompleted"
           @onchange="() => OnToggle.InvokeAsync(Item.Id)" />
    <span class="todo-title">@Item.Title</span>
    <button class="btn-delete"
            @onclick="() => OnDelete.InvokeAsync(Item.Id)"
            title="Delete">
        &times;
    </button>
</li>

@code {
    [Parameter, EditorRequired]
    public TodoItem Item { get; set; } = default!;

    [Parameter]
    public EventCallback<Guid> OnToggle { get; set; }

    [Parameter]
    public EventCallback<Guid> OnDelete { get; set; }
}
